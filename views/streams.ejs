<% include header %>
<script src="scripts/lifestream-app-streams.js"></script>
<ls-alerts fixed dismiss-on-timeout="4000"></ls-alerts>
<div ng-controller="LifeStreamsManager as streams" ng-keypress="streams.keepAlivePing()">
	<ul class="nav nav-pills nav-justified" role="navigation">
		<li ng-repeat="op in streams.operations" ng-class="{ active: op.active }"><a href="#{{op.url}}">{{op.desc}}</a></li>
	</ul>
	<div class="col-sm-offset-1 col-sm-10">
		<div ng-view></div>
	</div>
</div>

<% include footer %>
